<%= render 'shared/page_header', title: @category.name, total: number_to_currency(@category.total_expenses) %>

<ul class='card_list p-2'>
  <% if @expenses.empty? %>
    <li class='empty_text'>You don't have any transactions yet.</li>
  <% end %>

  <% @expenses.each do |expense| %>
    <%= render 'expense_card', expense: expense %>
  <% end %>
</ul>

<%= render 'shared/actions', path: new_category_expense_path(@category) %>
